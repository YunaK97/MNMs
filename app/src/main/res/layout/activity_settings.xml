<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.hongik.mnms.mainscreen.ui.settings.SettingsActivity">

    <TextView
        style="@style/CustomTextView"
        android:text="회원정보"
        android:id="@+id/tv_settings"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_settings"
        android:id="@+id/RL_settings_info"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LL_settings_name"
            >
            <TextView
                style="@style/CustomTextView"
                android:text="이름"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                />
            <TextView
                style="@style/CustomTextView"
                android:id="@+id/tv_memName"
                android:text="ex)김나현"
                android:layout_weight="1"
                android:layout_width="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LL_settings_pw"
            android:layout_below="@id/LL_settings_name"
            >
            <TextView
                style="@style/CustomTextView"
                android:text="비밀번호"
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                />
            <EditText
                style="@style/CustomTextView"
                android:id="@+id/tv_pw"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@drawable/sidecustom_round"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LL_settings_pw_check"
            android:layout_below="@id/LL_settings_pw"
            >
            <TextView
                style="@style/CustomTextView"
                android:text="비밀번호 확인"
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                />
            <EditText
                style="@style/CustomTextView"
                android:id="@+id/tv_pw_check"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sidecustom_round"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LL_settings_email"
            android:layout_below="@id/LL_settings_pw_check"
            >
            <TextView
                style="@style/CustomTextView"
                android:text="이메일"
                android:layout_width="match_parent"
                android:layout_weight="1.3"
                />
            <TextView
                style="@style/CustomTextView"
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="ex)nh822@naver.com"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                />
        </LinearLayout>
        <Button
            style="@style/CustomButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="비밀번호변경"
            android:id="@+id/btn_newPW"
            />
        <Button
            style="@style/CustomButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="회원탈퇴"
            android:id="@+id/btn_memberOut"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LL_settings_first"
        android:visibility="gone"
        >
        <TextView
            style="@style/CustomTextView"
            android:text="비밀번호"
            android:layout_width="match_parent"
            android:layout_weight="1.4"
            />
        <EditText
            style="@style/CustomTextView"
            android:id="@+id/tv_first_pw"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@drawable/sidecustom_round"
            />
    </LinearLayout>

</RelativeLayout>