<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.hongik.mnms.mainscreen.ui.settings.SettingsActivity">

    <TextView
        style="@style/CustomTextView"
        android:text="회원정보"
        android:id="@+id/tvSettings"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvSettings"
        android:id="@+id/RLSettingsInfo"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LLSettingsName"
            >
            <TextView
                style="@style/CustomTextView"
                android:text="이름"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                />
            <TextView
                style="@style/CustomTextView"
                android:id="@+id/tvMemName"
                android:text="ex)김나현"
                android:layout_weight="1"
                android:layout_width="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LLSettingsPW"
            android:layout_below="@id/LLSettingsName"
            >
            <TextView
                style="@style/CustomTextView"
                android:text="비밀번호"
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                />
            <EditText
                style="@style/CustomTextView"
                android:id="@+id/etSettingsPW"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="@drawable/sidecustom_round"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LLSettingsPWCheck"
            android:layout_below="@id/LLSettingsPW"
            >
            <TextView
                style="@style/CustomTextView"
                android:text="비밀번호 확인"
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                />
            <EditText
                style="@style/CustomTextView"
                android:id="@+id/etPWCheck"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_weight="1"
                android:background="@drawable/sidecustom_round"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LLSettingsPhone"
            android:gravity="center"
            android:layout_below="@id/LLSettingsPWCheck"
            >
            <TextView
                style="@style/CustomTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="핸드폰 번호" />

            <EditText
                android:background="@drawable/sidecustom_round"
                style="@style/CustomTextView"
                android:id="@+id/tvSettingsPhone1"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="30sp"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                />
            <EditText
                style="@style/CustomTextView"
                android:id="@+id/tvSettingsPhone2"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_width="match_parent"
                android:background="@drawable/sidecustom_round"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginLeft="3sp"
                android:layout_marginRight="3sp"
                android:textSize="30sp"
                />
            <EditText
                style="@style/CustomTextView"
                android:id="@+id/tvSettingsPhone3"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_width="match_parent"
                android:background="@drawable/sidecustom_round"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LL_settings_email"
            android:layout_below="@id/LLSettingsPhone"
            >
            <TextView
                style="@style/CustomTextView"
                android:text="이메일"
                android:layout_width="match_parent"
                android:layout_weight="1.3"
                />
            <TextView
                style="@style/CustomTextView"
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="ex)nh822@naver.com"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                />
        </LinearLayout>
        <Button
            style="@style/CustomButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="비밀번호변경"
            android:id="@+id/btnNewPW"
            />
        <Button
            style="@style/CustomButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="회원탈퇴"
            android:id="@+id/btnMemberOut"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LLSettingsFirst"
        android:visibility="visible"
        >
        <TextView
            style="@style/CustomTextView"
            android:text="비밀번호"
            android:layout_width="match_parent"
            android:layout_weight="1.4"
            />
        <EditText
            style="@style/CustomTextView"
            android:id="@+id/tvFirstPW"
            android:inputType="textPassword"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@drawable/sidecustom_round"
            />
        <Button
            android:id="@+id/btnSettingsPW"
            style="@style/CustomButton"
            android:text="비밀번호 확인"
            android:textSize="15sp"
            />
    </LinearLayout>

</RelativeLayout>