<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".membership.ui.home.NewFeeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/LL_newFee_groupName"
        android:layout_height="wrap_content">
        <TextView
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:text="멤버십 이름"
            android:layout_weight="1"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            style="@style/CustomTextView"
            android:text="ex)audi"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LL_newFee_fee"
        android:layout_below="@+id/LL_newFee_groupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:text="납입할 금액"
            android:layout_weight="1"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            style="@style/CustomTextView"
            android:text="ex)50000"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_newFee_pw"
        android:layout_below="@+id/LL_newFee_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:text="계좌 비밀번호"
            android:layout_weight="1"
            />
        <EditText
            android:layout_weight="1"
            android:inputType="numberPassword"
            android:layout_width="match_parent"
            style="@style/CustomTextView"
            android:text="ex)50000"
            />
    </LinearLayout>

</RelativeLayout>