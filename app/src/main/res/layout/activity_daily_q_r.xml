<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daily.ui.home.DailyQRActivity">

    <RadioGroup
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/dutch_radioGroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbt_up"
            android:text="올림"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbt_round"
            android:text="반올림"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rbt_down"
            android:text="내림"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <TextView
        style="@style/CustomTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="25sp"
        android:id="@+id/tvTotalMoney"
        android:layout_toLeftOf="@+id/btn_qrMake"
        android:textAlignment="textEnd"
        android:text="1000000000"
        android:gravity="end" />

    <Spinner
        android:background="@color/colorTitle"
        android:layout_toRightOf="@id/dutch_radioGroup"
        android:id="@+id/dutchType"
        android:layout_width="30sp"
        android:layout_height="25sp"
        android:layout_margin="2sp"
        android:layout_gravity="center"
        android:dropDownWidth="250dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/dutch_radioGroup"
        android:layout_width="match_parent"
        android:layout_above="@+id/btn_qrMake"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDutchMembers"
            android:background="@drawable/sidecustom"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEachMemMoney"
            android:layout_weight="1"
            android:background="@drawable/sidecustom"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>



    <ImageView
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:id="@+id/daily_qrImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_qrMake"
        android:layout_toLeftOf="@id/btn_qrScan"
        style="@style/CustomButton"
        android:text="QR생성"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_qrScan"
        style="@style/CustomButton"
        android:layout_alignParentRight="true"
        android:text="QR스캔"/>

</RelativeLayout>