<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300sp"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        style="@style/CustomTextView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="주기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_customWeek"
            android:background="@android:color/holo_red_light"
            style="@style/CustomTextView"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="매주" />

        <TextView
            android:id="@+id/tv_customMon"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="매월" />

        <TextView
            android:id="@+id/tv_customYear"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="매년" />
    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/LL_dialog_week"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_custom_mon"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="월"
            android:textColor="#ffffff"
            android:background="@android:color/holo_red_light"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_custom_tue"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="화"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_custom_wed"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="수"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_custom_thu"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="목"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_custom_fri"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="금"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_custom_sat"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="토"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_custom_sun"
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="일"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:id="@+id/LL_dialog_month"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/mon_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
             />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:id="@+id/LL_dialog_year"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/year_monSpinner"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            />

        <TextView
            style="@style/CustomTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#000000"
            android:text="-" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/year_daySpinner"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="확인"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:text="취소"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>