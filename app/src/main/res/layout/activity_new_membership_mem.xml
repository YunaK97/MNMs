<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.hongik.mnms.membership.ui.home.NewMembershipMemActivity">

    <LinearLayout
        android:id="@+id/layout_newMembershipMemsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/membership_memID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="member의 id 입력"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/btn_newMembershipMemID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_newMembershipMemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_newMembershipMemsearch"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_newMembershipMemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sidecustom"
            android:padding="5dp"
            android:text="친구이름"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_newMembershipMemID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sidecustom"
            android:padding="5dp"
            android:text="친구ID"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_addMembershipMem"
            style="@style/CustomButton"
            android:layout_gravity="center"
            android:text="member 추가"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>