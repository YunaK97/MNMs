<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.hongik.mnms.newprocesses.NewMembershipActivity">

    <LinearLayout
        android:id="@+id/LL_newMembership1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="톡방이름"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/membership_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ex) 아우디"
            android:inputType="text"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_newMembership2"
        android:layout_below="@+id/LL_newMembership1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회비(단위:만원)"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/membership_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ex)5"
            android:inputType="number"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_newMembership3"
        android:layout_below="@+id/LL_newMembership2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="미납횟수(단위:회)"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/membership_notsubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ex) 3"
            android:inputType="number"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_newMembership4"
        android:layout_below="@+id/LL_newMembership3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="계좌번호"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TV_newMembership_accountNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ex) 1234-12-1234"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_newMembership5"
        android:layout_below="@+id/LL_newMembership4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="계좌비밀번호"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/TV_newMembership_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="ex) 1234"
            android:inputType="numberPassword"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="친구선택"
        android:id="@+id/select_frind_TV"
        android:layout_below="@+id/LL_newMembership5"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/membership_select_friend"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/select_frind_TV"
        android:layout_above="@+id/btn_new_membership"
        android:layout_width="match_parent"
        android:layout_marginBottom="10sp"
        android:layout_height="match_parent" />

    <Button
        style="@style/CustomButton"
        android:id="@+id/btn_new_membership"
        android:layout_centerHorizontal="true"
        android:text="@string/app_new_membership"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10sp"
        />

</RelativeLayout>