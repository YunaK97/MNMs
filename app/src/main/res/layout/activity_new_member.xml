<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.hongik.mnms.newgroupfriend.NewFriendActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/member_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="친구의 id 입력"
            android:inputType="text"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_member_search"
            android:background="@android:drawable/ic_menu_search"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/member_layout"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:background="@drawable/sidecustom"
            android:id="@+id/member_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:padding="5dp"
            android:text="친구이름" />

        <TextView
            android:id="@+id/member_id_text"
            android:background="@drawable/sidecustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:textSize="20sp"
            android:text="친구ID" />
        <Button
            android:id="@+id/btn_addMember"
            style="@style/CustomButton"
            android:text="@string/app_new_friend"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>